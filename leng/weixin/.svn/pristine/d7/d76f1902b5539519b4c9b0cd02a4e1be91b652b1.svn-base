body{
	background:url(../img/bj.png) repeat;
}
.list_top{
	width:100vw;
	height:7rem;
	position:fixed;
	top:0px;
	left:0px;
}
.header{
	background:#366CB2;
	height:3rem;
	text-align: center;
	line-height: 3rem;
	color:#fefefe;
	font-weight: bold;
	font-size: 1.5rem;
	position:relative;
}
.header a{
	display:block;
	position:absolute;
	top:0rem;
	right:2vw;
	height:2rem;
	color:#fefefe!important;
	font-weight: 100;
}
.esc{
	position:absolute;
	top:0.5rem;
	left:2vw;
	height:2rem;
	line-height: 2rem;
	font-size: 1.5rem;
	color:#fefefe;
	font-weight:normal!important;
}
.esc img{
	height:1.5rem;
	width:1.5rem;
	margin-top:0.25rem;
	float:left;
	
}
.esc span{
	float:left;
	color:#D9E3F1;
}
.header a{
	color:#000;
	margin-left:2rem;
	margin:0;
	padding:0;
}
.list_top form{
	width:100vw;
	height:4rem;
	position:relative;
	border-bottom: 2px solid #b7bcb6;
	background:url(../img/bj.png) repeat;
}
.list_top form input[type=text]{
	width:74vw;
	height:3rem;
	border:none;
	outline: none;
	padding-left:2rem;
	box-sizing: border-box;
	border-radius: 20px;
	margin-top:0.5rem;
	margin-left:10vw;
}
.list_top form input[type=button]{
	background-color:#366Ca0;
	width:10vw;
	height:2rem;
	font-size: 1rem;
	overflow: hidden;
	text-align: center;
	border:none;
	color:#fefefe;
	border-radius: 1rem;
	-webkit-appearance:none;
	appearance:none;
	outline: none;
}
.list_top form label{
	position:absolute;
	display:block;
	width:1.5rem;
	height:1.5rem;
	color:#ccc;
	top:1.25rem;
	left:11vw;
	border:none;
}
.list_top form label img{
	display:block;
	width:100%;
	height:100%;
}
.content{
	width:100vw;
	height:auto;
	min-height:200px;
	margin-top:8.5rem;
	margin-bottom: 2rem;
}
.list{
	border-bottom:2px solid #b7bcb6;
	height:11rem;
}
.list div,ul{
	float:left
}
.list .list_left{
	width:30vw;
	height:11rem;
}/*
.list .list_left img{
	display:block;
	width:10vw;
	height:10rem;
	height:auto;
	float: left;
}*/
.list .list_left div{
	float:left;
	width:30vw;
	overflow: hidden;
	color:#000;
	font-size:1rem;
	height:11rem;
	border-right:1px dashed blue;
}
.list .list_left div p{
	width:30vw;
	height:2.2rem;
	line-height:2.2rem;
	white-space:nowrap;
}
.list .list_left div p img{
	width:1.5rem;
	height:1.5rem;
	border:none;
	float:left;
	margin-top:0.35rem;
	margin-left:2vw;
}
.list .list_center{
	width:55vw;
	height:11rem;
	overflow:hidden;
}
.list .list_center li{
	width:50vw;
	padding-left:5vw;
	height:1.5rem;
	white-space:nowrap;
}
.list .list_center li:nth-of-type(1){
	color:#161415;
	font-weight:bold;
	font-size: 1.5rem;
	line-height:1.5rem;
}
.list .list_center li:nth-of-type(1) span{
	color:#565b55;
	margin-left:1vw;
	font-size: 1rem;
}
.list .list_center li:nth-of-type(1) span span{
	color:#728ba1;
}
.list .list_center .li_all{
	color:#565b55;
	font-size: 1rem;
}
.list .list_center .li_all span{
	color:#728ba1;
}
.list .list_right{
	width:15vw;
	height:11rem;
	text-align: center;
	line-height:3rem;
	font-size:1rem;
	white-space:nowrap;
}
.footer{
	position:fixed;
	bottom:0px;
	left:0px;
	height:2rem;
	line-height:2rem;
	font-size: 1rem;
	text-align: center;
	background:#ccc;
	width:100vw;
}
.window_post{
	position:fixed;
	top:0;
	left:0;
	width:100vw;
	height:100vh;
	z-index: 9999;
	background:rgba(250,250,250,0.8);
	text-align: center;
}
.window_post div{
	width:80vw;
	height:10rem;
	background:#fefefe;
	text-align: center;
	margin-left:10vw;
	margin-top:50px;
	box-shadow: 5px 5px 20px #000;
	-webkit-box-shadow: 5px 5px 20px #000;
	box-sizing: border-box;
}
.window_post label{
	height:5rem;
	width:20ww;
	line-height: 5rem;
	font-size: 1.5rem;
}
.window_post input[type=text]{
	border:none;
	border-bottom:1px solid #ccc;
	outline: none;
	text-align: center;
	font-size:1.5rem;
}
.window_post input[type=button]{
	border:none;
	-webkit-box-shadow: 1px 1px 10px #000;
	box-shadow: 1px 1px 10px #000;
	background:#61A5E4;
	height:2rem;
	line-height:2rem;
	font-size: 1.5rem;
	outline: none;
	border-radius: 1rem;
	
}
.more_machine{
	width:100vw;
	height:3rem;
	font-size: 1.5rem;
	line-height:3rem;
	text-align: center;
}