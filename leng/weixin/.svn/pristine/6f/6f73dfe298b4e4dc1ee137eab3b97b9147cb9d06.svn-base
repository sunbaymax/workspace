body{
	overflow-x: hidden;
}
.cd-switcher{
	width:100%;
	height:4rem;
	position:fixed;
	left:0px;
	top:0px;
	z-index: 9999;
}
.cd-switcher li{
	width:50%;
	height:4rem;
	line-height: 4rem;
	background: #d2d8d8;
  	text-align: center;
  	float:left;
  	font-size: 1.5rem;
}
.cd-switcher li a{
	display:block;
	width:100%;
	height:100%;
  	color: #809191;
  	font-weight: bold;
  	white-space: nowrap;
}
.cd-switcher .selected{
	background:#fefefe;
}
#cd-login,#cd-signup{
	width:100%;
	height:auto;
	margin-top:4rem;
	background:#fefefe;
	margin-bottom:4rem;
}
.cd-form .fieldset{
	width:100%;
	height:4rem;
	position:relative;
}
.cd-form .fieldset input[type=text],.cd-form .fieldset input[type=password],.cd-form .fieldset input[type=button]{
	width:90%;
	height:4rem;
	outline: none;
	box-sizing: border-box;
	margin-left:5%;
	font-size:1rem;
	font-size: 1rem;
	border: 1px solid #d2d8d8;
	-webkit-appearance: none;
	-moz-appearance: none;
	-ms-appearance: none;
	-o-appearance: none;
	appearance: none;
}
.cd-form .fieldset input[type=button]{
	background-color: #2F889A;
	color:#fefefe;
	font-size: 1.5rem;
	font-weight: bold;
}
.cd-form .fieldset input[type=text],
.cd-form .fieldset input[type=password]{
	padding-left:4rem;
}
.cd-form .fieldset .image-replace{
	position:absolute;
	display:block;
	width:4rem;
	height:4rem;
	font-size:2rem;
	line-height: 4rem;
	text-align: center;
	left:5%;
	font-size:1rem;
}
.cd-form .register_prompt{
	width:100%;
	height:2rem;
	margin-left:10%;
	line-height: 2rem;
	font-size:1rem;
}
.remember_login{
	margin-left:5%;
	font-size: 1rem;
}
